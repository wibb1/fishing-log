<section class="hero">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">New Trip</h1>
    </div>
  </div>
</section>

<div class="section-indent">
  <div class="container has-text-dark">
    <%= form_for(@trip) do |f| %>
    
      <div class="field">
        <%= f.label :name, :class => "label" %>
        <div class="control">
          <%= f.text_field :name, placeholder: "Name", :class => "input" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :success, :class => "label" %>
        <div class="control">
          <div class="select">
            <%= f.select :success, ["Good", "Bad"], :prompt => "Select One" %>
          </div>
        </div>
      </div>

      <div class="field">
        <%= f.label :species, :class => "label" %>
        <div class="control">
          <div class="select">
            <%= f.select :species, @species_list, :prompt => "Select One" %>
          </div>
        </div>
      </div>

      <div class="field">
        <%= f.label :body, "Description", :class => "label" %>
        <div class="control">
          <%= f.text_area :body, placeholder: "Description", :class => "input" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :latitude, :class => "label" %>
        <div class="control">
          <%= f.number_field :latitude, placeholder: "Latitude", :class => "input" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :longitude, :class => "label" %>
        <div class="control">
          <%= f.number_field :longitude, placeholder: "Longitude", :class => "input" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :trip_time, :class => "label" %>
        <div class="control">
          <%= f.datetime_local_field :longitude, placeholder: "Longitude", :class => "input" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :private, :class => "label" %>
        <div class="control">
          <div class="select">
            <%= f.select :private, ["Shared", "Private"], :prompt => "Select One" %>
          </div>
        </div>
      </div>      

      <div class="field">
        <%= f.submit "Submit", :class =>"button is-primary has-text-weight-bold" %>
      </div>

    <% end %>

    
  </div>
</div>
